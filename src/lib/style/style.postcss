.works-nav {
    margin: 0 auto 48px;
    & h3 {
        text-align: center;
        font-size: var(--body-text-size);
        font-weight: normal;
        margin-bottom: 16px;
        color: var(--secondary-text-color);
    }
    & ul {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
        max-width: 600px;
        margin: 0 auto;
        padding: 0 16px;
    }
    & a {
        display: block;
        height: 100%;
        padding: 16px;
        text-decoration: none;
        border-radius: 8px;
        background-color: #fff;
        background-repeat: no-repeat;
        background-size: 80px;
        background-position: 100% 0;
        box-shadow: 0 1px 2px 0 rgba(0,0,0,0.1), 0 0 1px 0 rgba(0,0,0,0.2);
        transition: box-shadow .2s, transform .5s;
    }
    & a:hover {
        transform: translateY(-4px);
        box-shadow: 0 4px 16px 0 rgba(0,0,0,0.16), 0 0 1px 0 rgba(0,0,0,0.4);
    }
    & h4 {
        font-size: 1rem;
    }
    & p {
        font-size: 12px;
        color: rgba(0, 0, 0, .3);
    }
    & a:link, & a:visited {
        color: inherit;
    }
    @media (--mobile) {
        & ul {
            grid-template-columns: 1fr;
        }
    }
}

.skills {
    text-align: center;
    & h3 {
        font-size: var(--body-text-size);
        font-weight: normal;
        margin-bottom: 16px;
        color: var(--secondary-text-color);
    }
    & ul {
        max-width: 600px;
        margin: auto;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
    }
    & .dot {
        width: 4px;
        height: 4px;
        overflow: hidden;
        border-radius: 50%;
        margin: 0 12px;
        background: #CCC;
    }
}

.section-thumbs {
    position: fixed;
    top: 50%;
    left: 8px;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 6px;
    & div {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 6px;
        height: 16px;
        border-radius: 8px;
        font-size: 8px;
        color: #fff;
        background: rgba(0, 0, 0, .2);
        box-shadow: 0 0 0 1px rgba(255, 255, 255, .2);
        cursor: pointer;
        &:hover, &.active {
            background: rgba(0, 0, 0, .6);
            box-shadow: 0 0 2px 1px rgba(255, 255, 255, .5);
        }
    }
}

.works {
    padding: 80px 16px;
    padding-left: calc(env(safe-area-inset-left) + 16px);
    padding-right: calc(env(safe-area-inset-right) + 16px);
    overflow: hidden;
    & .works-logo {
        max-width: 800px;
        margin: 0 auto 48px;
        & img {
            max-width: 100%;
            display: block;
            margin: auto;
        }
